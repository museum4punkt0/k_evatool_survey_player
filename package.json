{
    "name": "evaluation-tool-survey-player",
    "description": "Evaluation Tool Survey Player",
    "private": true,
    "version": "1.0.180",
    "author": "2av",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "serve": "vite preview",
        "pre-commit": "sh pre-commit.sh",
        "electron": "wait-on tcp:3001 && cross-env IS_DEV=true electron .",
        "electron:pack": "electron-builder --dir",
        "electron:builder": "electron-builder",
        "build:for:electron": "cross-env ELECTRON=true vite build",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
        "electron:build": "yarn build:for:electron && yarn electron:builder -mwl"
    },
    "pre-commit": [
        "pre-commit"
    ],
    "dependencies": {
        "@headlessui/vue": "^1.5.0",
        "@heroicons/vue": "^1.0.6",
        "@tailwindcss/forms": "^0.5.0",
        "@twoavy/idle-timer": "^2.0.6",
        "animate.css": "^4.1.1",
        "axios": "^0.26.1",
        "dotenv": "^16.0.0",
        "framerate-utils": "^4.1.0",
        "lodash": "^4.17.21",
        "ms-to-timecode": "^0.1.2",
        "sass": "^1.50.0",
        "uuid": "^8.3.2",
        "vue": "^3.2.33",
        "vue-i18n": "^9.1.9",
        "vue-router": "4",
        "vue-tippy": "^6.0.0-alpha.52",
        "vuex": "^4.0.2"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^1.10.2y",
        "@vue/cli-plugin-eslint": "~5.0.4",
        "@vue/compiler-sfc": "^3.2.33",
        "@vue/eslint-config-prettier": "^7.0.0",
        "@vue/eslint-config-standard": "^6.1.0",
        "autoprefixer": "^10.4.4",
        "babel-eslint": "^10.1.0",
        "concurrently": "^7.1.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-vue": "^8.6.0",
        "postcss": "^8.4.12",
        "pre-commit": "^1.2.2",
        "prettier": "^2.6.2",
        "tailwindcss": "^3.0.24",
        "vite": "^2.9.5",
        "vite-plugin-vue-env": "^1.0.6",
        "wait-on": "^6.0.1"
    },
    "build": {
        "appId": "com.my-website.my-app",
        "productName": "MyApp",
        "copyright": "Copyright Â© 2019 ${author}",
        "mac": {
            "category": "public.app-category.utilities"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        }
    }
}
